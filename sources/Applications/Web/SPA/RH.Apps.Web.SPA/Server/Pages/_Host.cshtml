@page "/"
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@using Microsoft.Extensions.Configuration
@using Microsoft.Extensions.Hosting
@using RH.Apps.Web.SPA.Client

@inject IConfiguration Configuration
@inject IHostEnvironment HostEnvironment

@{
	var runtime = Configuration.GetSection("Runtime").Get<string>();
}

<!DOCTYPE html>
<html>

<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
	<title>Rafsanul Hasan</title>
	<base href="/" />

	<environment include="Development">
		<link href="libraries/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />		
		<link href="styles/app.css" rel="stylesheet" />
		@if (runtime == "Client")
		{
		<link href="RH.Apps.Web.SPA.Client.styles.css" rel="stylesheet" />
		}
	</environment>
	<environment include="Staging,Production">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha256-T/zFmO5s/0aSwc6ics2KLxlfbewyRz6UNw1s3Ppf5gE=" rel="stylesheet" crossorigin="anonymous">
		<link href="styles/app.min.css" rel="stylesheet" />
	</environment>

	<link href="manifest.json" rel="manifest" />
	<link href="assets/icons/icon-512.png" rel="apple-touch-icon" sizes="512x512" />
</head>

<body>

	@if (runtime == "Client")
	{
	<component id="app" type="@typeof(App)" render-mode="WebAssembly" />
	}
	else if (runtime == "Server")
	{
	<component id="app" type="@typeof(App)" render-mode="ServerPrerendered" />
	<div id="blazor-error-ui">
		An unhandled error has occurred.
		<a href="" class="reload">Reload</a>
		<a class="dismiss">🗙</a>
	</div>
	}

	@if (runtime == "Client")
	{	
		@*<script src="_content/Microsoft.AspNetCore.Components.WebAssembly.Authentication/AuthenticationService.js"></script>*@
		<script src="_framework/blazor.webassembly.js"></script>		
	}
	else if (runtime == "Server")
	{
		<script src="_framework/blazor.server.js"></script>
	}

	<environment include="Development" exclude="Staging,Production">
	@if (runtime == "Client")
	{		
		@*<script src="scripts/decode.js"></script>*@		
	}	 
	</environment>

	<environment include="Staging,Production">
	@if (runtime == "Client")
	{	
		@*<script src="scripts/decode.min.js"></script>*@
	}
	</environment>

</body>

</html>
